<resources xmlns:custom="http://schemas.android.com/apk/res/uk.co.pilllogger">

    <style name="AppTheme.Fab" parent="FloatingActionButton">
        <item name="floatingActionButtonColor">#cddc39</item>
    </style>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/PartiallyTransparentActionBar</item>
        <item name="android:actionBarTabStyle">@style/PartiallyTransparentActionBarTab</item>
        <item name="android:actionBarTabBarStyle">@android:style/Widget.Holo.ActionBar.TabBar</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Example</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Example</item>
    </style>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/PartiallyTransparentActionBar</item>
        <item name="android:actionBarTabStyle">@style/PartiallyTransparentActionBarTab</item>
        <item name="android:actionBarTabBarStyle">@android:style/Widget.Holo.ActionBar.TabBar</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Example</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Example</item>
        <item name="floatingActionButtonStyle">@style/AppTheme.Fab</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- ActionBar styles -->
    <style name="PartiallyTransparentActionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/action_bar</item>
        <item name="android:backgroundSplit">@color/action_bar</item>
        <item name="android:backgroundStacked">@color/action_bar</item>
        <item name="android:displayOptions">useLogo|showHome</item>
    </style>

    <style name="PartiallyTransparentActionBarTab"
                   parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">#00000000</item>
    </style>

    <style name="flatButton" parent="@android:style/Widget.Holo.Light.Button.Borderless.Small">
        <item name="android:background">@null</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <style name="PopupMenu.Example" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/popup_menu</item>
    </style>

    <style name="DropDownNav.Example" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_example</item>
    </style>

    <style name="ExportItem">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="Tick"/>
    <style name="ConsumptionListItem"/>
    <style name="ListItemBackgroundSecondary"/>
    <style name="DefaultText"/>
    <style name="SecondaryText"/>

    <style name="ConsumptionPillName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="ConsumptionDate">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="ConsumptionSize"/>

    <style name="AddConsumptionBackground"/>

    <style name="ContainerBackground"/>

    <style name="ContainerShadow">
        <item name="android:layout_height">5dp</item>
        <item name="android:background">@drawable/consumption_shadow</item>
    </style>

    <style name="Title">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">5dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Title.Fragment">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Title.Dialog">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CardTitle"/>
    <style name="NewMedicineTitle" />
    <style name="AddConsumptionGradient" />
    <style name="InfoDialogTopTextColour">
        <item name ="android:textColor">@color/text_grey</item>
    </style>

