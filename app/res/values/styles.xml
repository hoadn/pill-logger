<resources xmlns:custom="http://schemas.android.com/apk/res/uk.co.pilllogger">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/PartiallyTransparentActionBar</item>
        <item name="android:actionBarTabStyle">@style/PartiallyTransparentActionBarTab</item>
        <item name="android:actionBarTabBarStyle">@android:style/Widget.Holo.ActionBar.TabBar</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Example</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Example</item>
    </style>

    <!-- ActionBar styles -->
    <style name="PartiallyTransparentActionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#60000000</item>
        <item name="android:backgroundSplit">#60000000</item>
        <item name="android:backgroundStacked">#00000000</item>
    </style>
    <style name="PartiallyTransparentActionBarTab"
                   parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">#00000000</item>
    </style>

    <style name="flatButton" parent="@android:style/Widget.Holo.Light.Button.Borderless.Small">
        <item name="android:background">@null</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <style name="PopupMenu.Example" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/popup_menu</item>
    </style>

    <style name="DropDownNav.Example" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_example</item>
    </style>

    <style name="ConsumptionListItem">

    </style>

    <style name="ConsumptionPillName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="ConsumptionDate">
        <item name="android:textSize">14dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">-5dp</item>
    </style>

    <style name="ConsumptionSize"/>

    <style name="Rainbow" parent="AppTheme">
        <item name="android:textViewStyle">@style/RainbowTextView</item>
        <item name="ConsumptionListItem">@style/ConsumptionListItem.Rainbow</item>
        <item name="ConsumptionPillName">@style/ConsumptionPillName.Rainbow</item>
        <item name="ConsumptionDate">@style/ConsumptionDate.Rainbow</item>
        <item name="ConsumptionSize">@style/ConsumptionSize.Rainbow</item>
    </style>

    <style name="RainbowTextView">
        <item name="android:textColor">@color/default_text</item>
    </style>

    <style name="ConsumptionListItem.Rainbow">
        <item name="android:background">@drawable/list_selector</item>
    </style>

    <style name="ConsumptionPillName.Rainbow">
        <item name="android:textColor">@color/default_text</item>
    </style>

    <style name="ConsumptionDate.Rainbow">
        <item name="android:textColor">@color/consumption_date</item>
    </style>

    <style name="ConsumptionSize.Rainbow">
        <item name="android:textColor">@color/consumption_size</item>
    </style>

    <style name="Professional" parent="AppTheme">
        <item name="android:textViewStyle">@style/ProfessionalTextView</item>
        <item name="ConsumptionListItem">@style/ConsumptionListItem.Professional</item>
        <item name="ConsumptionPillName">@style/ConsumptionPillName.Professional</item>
        <item name="ConsumptionDate">@style/ConsumptionDate.Professional</item>
        <item name="ConsumptionSize">@style/ConsumptionSize.Professional</item>
    </style>

    <style name="ProfessionalTextView">
        <item name="android:textColor">@color/default_text_professional</item>
    </style>

    <style name="ConsumptionPillName.Professional">
        <item name="android:textColor">@color/consumption_professional</item>
    </style>

    <style name="ConsumptionDate.Professional">
        <item name="android:textColor">@color/consumption_date_professional</item>
    </style>

    <style name="ConsumptionListItem.Professional">
        <item name="android:background">@drawable/cogs</item>
    </style>

    <style name="ConsumptionSize.Professional">
        <item name="android:textColor">@color/consumption_size_professional</item>
    </style>
</resources>