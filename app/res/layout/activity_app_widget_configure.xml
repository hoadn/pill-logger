<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="?AddConsumptionBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/widget_configure_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/add_widget_title"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textAllCaps="true"
        android:textColor="@color/text_grey_medium"/>

    <View
        android:id="@+id/widget_configure_divider"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:background="#CCCCCC" />

    <ListView
        android:id="@+id/widget_configure_pill_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Optional"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textAllCaps="true"
        android:textColor="@color/text_grey_medium"/>

    <EditText
        android:id="@+id/widget_custom_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Custom Text (max 3)"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:maxLength="3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <include layout="@layout/colour_picker_small"/>
    </LinearLayout>

    <Button
        android:id="@+id/widget_configure_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Widget"/>

</LinearLayout>