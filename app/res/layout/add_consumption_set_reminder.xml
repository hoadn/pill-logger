<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/transparent">

    <TextView
        android:id="@+id/add_consumption_fragment_set_reminder_title"
        android:text="@string/add_consumption_reminder_title"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:textSize="18dp"
        android:padding="20dp"
        android:textColor="@color/action_bar"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_divider_lighter" />

    <RadioGroup
        android:id="@+id/add_consumption_fragment_reminder_type_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_vertical">
        <RadioButton android:id="@+id/add_consumption_fragment_select_reminder_hours"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="20dp"
                     android:checked="true"
                     android:text="@string/reminder_hours"
                     android:textColor="@color/text_grey_medium"/>
        <RadioButton android:id="@+id/add_consumption_fragment_select_reminder_specific"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="20dp"
                     android:text="@string/add_consumption_reminder_select_specific_label"
                     android:textColor="@color/text_grey_medium"/>
    </RadioGroup>
    <LinearLayout
        android:id="@+id/add_consumption_fragment_reminder_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:id="@+id/add_consumption_fragment_reminder_hours_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="@string/add_consumption_hours_prefix"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/add_consumption_fragment_reminder_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/add_consumption_hours_hint"/>
            <TextView
                android:id="@+id/add_consumption_fragment_reminder_hours_suffix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_consumption_hours_suffix"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/add_consumption_fragment_reminder_date_pickers_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:baselineAligned="false">

            <LinearLayout
                android:id="@+id/add_consumption_fragment_reminder_date_container"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <Spinner
                    android:id="@+id/add_consumption_fragment_reminder_date"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:clickable="false"
                    android:textSize="18sp"
                    android:textColor="@color/text_grey_medium"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/add_consumption_fragment_reminder_time_container"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <Spinner
                    android:id="@+id/add_consumption_fragment_reminder_time"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:clickable="false"
                    android:textSize="18sp"
                    android:textColor="@color/text_grey_medium"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_divider_lighter" />
    <RelativeLayout
        android:id="@+id/add_consumption_fragment_done_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <LinearLayout
            android:id="@+id/add_consumption_fragment_done"
            android:layout_height="50dp"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">
            <TextView
                android:id="@+id/add_consumption_fragment_done_text"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:textSize="14dp"
                android:textColor="@color/action_bar"
                android:textAllCaps="true"
                android:gravity="center_vertical"
                android:text="Ok"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/add_consumption_fragment_cancel"
            android:layout_height="50dp"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_toLeftOf="@id/add_consumption_fragment_done"
            android:layout_toStartOf="@id/add_consumption_fragment_done"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">
            <TextView
                android:id="@+id/add_consumption_fragment_cancel_text"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:textColor="@color/action_bar"
                android:textSize="14dp"
                android:textAllCaps="true"
                android:text="Cancel"/>

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>