<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@android:color/transparent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_consumption"
        android:gravity="center_horizontal"
        android:textColor="@color/title_blue"
        android:textAllCaps="true"
        android:textSize="14sp"
        />

    <!-- Quantity -->
    <LinearLayout
        android:id="@+id/info_dialog_quantity"
        android:layout_width="match_parent"
        android:layout_height="@dimen/small_list_item_height"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/add_consumption_fragment_quantity_title"
            android:text="@string/take_again_quantity_prefix"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:textSize="20sp"
            android:textColor="@color/text_grey_medium"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/add_consumption_fragment_decrease"
            android:text="@string/consumption_info_dialog_decrease"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:clickable="false"
            android:src="@drawable/chevron_down_red"
            android:padding="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/add_consumption_fragment_quantity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="1"
            android:gravity="center_vertical"
            android:textColor="@color/text_grey"/>
        <ImageView
            android:id="@+id/add_consumption_fragment_increase"
            android:text="@string/consumption_info_dialog_increase"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:padding="16dp"
            android:src="@drawable/chevron_up_green"
            android:background="?android:attr/selectableItemBackground"/>
    </LinearLayout>

    <!-- Time -->
    <LinearLayout
        android:id="@+id/add_consumption_fragment_date_pickers_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/small_list_item_height"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/add_consumption_fragment_select_time_title"
            android:layout_width="wrap_content"
            android:layout_weight="0"
            android:layout_height="wrap_content"
            android:text="@string/add_consumption_time_title"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:textSize="20sp"
            android:textColor="@color/text_grey_medium"
            android:layout_gravity="center_vertical" />
        <LinearLayout
            android:id="@+id/add_consumption_fragment_date_container"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <Spinner
                android:id="@+id/add_consumption_fragment_date"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:clickable="false"
                android:textSize="18sp"
                android:textColor="@color/text_grey"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/add_consumption_fragment_time_container"
            android:layout_width="wrap_content"
            android:layout_weight="0"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <Spinner
                android:id="@+id/add_consumption_fragment_time"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:clickable="false"
                android:textSize="18sp"
                android:textColor="@color/text_grey"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Reminder -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/small_list_item_height"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/add_consumption_fragment_set_reminder_title"
            android:text="@string/add_consumption_reminder_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:textSize="20sp"
            android:textColor="@color/text_grey_medium"
            android:layout_gravity="center_vertical"/>
        <CheckBox
            android:id="@+id/add_consumption_fragment_set_reminder_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <RadioGroup
        android:id="@+id/add_consumption_fragment_reminder_type_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">
        <RadioButton android:id="@+id/add_consumption_fragment_select_reminder_hours"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="20dp"
                     android:checked="true"
                     android:text="@string/reminder_hours"
                     android:visibility="gone"
                     style="?DefaultText"/>
        <RadioButton android:id="@+id/add_consumption_fragment_select_reminder_specific"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="20dp"
                     android:text="@string/add_consumption_reminder_select_specific_label"
                     android:visibility="gone"
                     style="?DefaultText"/>
    </RadioGroup>
    <LinearLayout
        android:id="@+id/add_consumption_fragment_reminder_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/add_consumption_fragment_reminder_hours_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="@string/add_consumption_hours_prefix"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/add_consumption_fragment_reminder_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/add_consumption_hours_hint"/>
            <TextView
                android:id="@+id/add_consumption_fragment_reminder_hours_suffix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_consumption_hours_suffix"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/add_consumption_fragment_reminder_date_pickers_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:baselineAligned="false">

            <LinearLayout
                android:id="@+id/add_consumption_fragment_reminder_date_container"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <Spinner
                    android:id="@+id/add_consumption_fragment_reminder_date"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:clickable="false"
                    android:textSize="18sp"
                    android:textColor="@color/text_grey"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/add_consumption_fragment_reminder_time_container"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <Spinner
                    android:id="@+id/add_consumption_fragment_reminder_time"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:clickable="false"
                    android:textSize="18sp"
                    android:textColor="@color/text_grey"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/add_consumption_fragment_done_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/export_pills_done"
            android:text="@string/done_label"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/text_grey_medium"
            android:drawableLeft="@drawable/navigation_back"/>
    </LinearLayout>
</LinearLayout>