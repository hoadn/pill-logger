<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@android:color/transparent">
    <TextView
        android:id="@+id/add_consumption_fragment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_consumption"
        android:gravity="center_horizontal"
        android:textColor="@color/light_blue"
        android:textSize="18dp"
        />

    <!-- Quantity -->
    <LinearLayout
        android:id="@+id/info_dialog_quantity"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_list_item_height"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/add_consumption_fragment_quantity_title"
            android:text="@string/take_again_quantity_prefix"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:textSize="20sp"
            android:textColor="@color/text_grey"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/add_consumption_fragment_decrease"
            android:text="@string/consumption_info_dialog_decrease"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:clickable="false"
            android:src="@drawable/chevron_down_red"
            android:padding="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/add_consumption_fragment_quantity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="1"
            android:gravity="center_vertical"
            android:textColor="@color/text_grey_medium"/>
        <ImageView
            android:id="@+id/add_consumption_fragment_increase"
            android:text="@string/consumption_info_dialog_increase"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:padding="16dp"
            android:src="@drawable/chevron_up_green"
            android:background="?android:attr/selectableItemBackground"/>
    </LinearLayout>

    <!-- Time -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_divider_light" />
    <LinearLayout
        android:id="@+id/add_consumption_fragment_set_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_list_item_height"
        android:orientation="horizontal"
        android:background="?android:attr/selectableItemBackground"
        style="?attr/ExportItem">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/add_consumption_fragment_set_time_title"
                android:text="Change Time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/text_grey"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/add_consumption_fragment_set_time_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_grey_medium"
                android:text="Now"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="5dp"
            android:src="@drawable/navigation_next"/>
    </LinearLayout>

    <!-- Reminder -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_divider_light" />
    <LinearLayout
        android:id="@+id/add_consumption_fragment_set_reminder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_list_item_height"
        android:orientation="horizontal"
        android:background="?android:attr/selectableItemBackground"
        style="?attr/ExportItem">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/add_consumption_fragment_set_reminder_title"
                android:text="Set Reminder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/text_grey"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/add_consumption_fragment_set_reminder_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_grey_medium"
                android:text="Not Set"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="5dp"
            android:src="@drawable/navigation_next"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/add_consumption_fragment_done_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/add_consumption_fragment_cancel"
            android:layout_height="50dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:onClick="cancel">
            <ImageView
                android:id="@+id/add_consumption_cancel_icon"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:src="@drawable/cancel"/>
            <TextView
                android:id="@+id/add_consumption_fragment_cancel_text"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:textColor="@color/text_grey_medium"
                android:textSize="16dp"
                android:text="Cancel"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/add_consumption_fragment_done"
            android:layout_height="50dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:onClick="done">

            <ImageView
                android:id="@+id/add_consumption_done_icon"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:src="@drawable/tick"/>

            <TextView
                android:id="@+id/add_consumption_fragment_done_text"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:textSize="16dp"
                android:textColor="@color/text_grey_medium"
                android:gravity="center_vertical"
                android:text="Done"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>