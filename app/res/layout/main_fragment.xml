<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_top_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="5"
    android:gravity="fill"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/consumption_fragment_title"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:text="@string/consumption_fragment_title"
        style="?attr/FragmentTitle"/>

    <TextView
        android:id="@+id/no_consumption_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/no_consumptions_text"
        android:textSize="20sp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/consumptions_loading"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"/>

    <ListView
        android:id="@+id/main_consumption_list"
        android:layout_width="match_parent"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:layout_below="@id/consumption_fragment_title"
        tools:visibility="visible"
        tools:listitem="@layout/consumption_list_item"/>


</RelativeLayout>
