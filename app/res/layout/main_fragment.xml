<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_top_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="5"
    android:gravity="fill"
    android:orientation="horizontal"
    >


    <android.support.v4.widget.SlidingPaneLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/graph_drawer_layout"
        android:layout_margin="5dp"
        android:background="@drawable/container">

        <ListView android:id="@+id/graph_drawer"
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice"
            android:dividerHeight="0dp"
            android:layout_gravity="left"
            android:background="@color/drawer_item_background"/>
        <com.echo.holographlibrary.StackBarGraph
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:paddingRight="30dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:layout_marginLeft="0dp"
            android:id="@+id/main_graph"
        />

    </android.support.v4.widget.SlidingPaneLayout>


    <ListView
        android:id="@+id/main_consumption_list"
        android:layout_below="@+id/graph_drawer_layout"
        android:layout_width="match_parent"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/list_divider_height"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="5dp"
        tools:listitem="@layout/consumption_list_item"/>
</RelativeLayout>
