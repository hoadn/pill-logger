<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_top_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="5"
    android:gravity="fill"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/consumption_fragment_title"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:text="@string/consumption_fragment_title"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:padding="5dp"
        android:textAllCaps="true"/>

    <TextView
        android:id="@+id/no_consumption_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/no_consumptions_text"
        android:textSize="20sp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/main_consumption_list"
        android:layout_width="match_parent"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/list_divider_height"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:layout_below="@id/consumption_fragment_title"
        tools:listitem="@layout/consumption_list_item"/>


</RelativeLayout>
