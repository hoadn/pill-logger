<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/export_start_time_layout"
            android:background="?android:attr/selectableItemBackground"
            android:padding="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/export_start_time_title"
                android:gravity="center"
                android:text="@string/export_start_time_select"
                android:textSize="20sp"
                android:textColor="@color/title_blue"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/export_start_time"
                android:text="13:00"
                android:textSize="16sp"
                android:visibility="gone"
                android:textColor="@color/text_grey"/>

            <ImageView
                android:id="@+id/export_start_time_clear"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="4dp"
                android:src="@drawable/cancel"
                android:gravity="center"
                android:visibility="gone"
                android:background="?android:attr/selectableItemBackground"/>

        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_divider_lighter" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/export_end_time_layout"
            android:background="?android:attr/selectableItemBackground"
            android:padding="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/export_end_time_title"
                android:gravity="center"
                android:text="@string/export_end_time_select"
                android:textSize="20sp"
                android:textColor="@color/title_blue"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/export_end_time"
                android:text="13:00"
                android:textSize="16sp"
                android:visibility="gone"
                android:textColor="@color/text_grey"/>

            <ImageView
                android:id="@+id/export_end_time_clear"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="4dp"
                android:src="@drawable/cancel"
                android:gravity="center"
                android:visibility="gone"
                android:background="?android:attr/selectableItemBackground"/>

        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_divider_lighter" />
    <LinearLayout
        android:id="@+id/export_pills_list_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/export_pills_done"
            android:text="@string/done_label"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textColor="@color/text_grey_medium"
            android:drawableLeft="@drawable/navigation_back"/>
        <TextView
            android:id="@+id/export_time_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/warning_red"
            android:layout_gravity="center"
            android:paddingTop="0dp"
            android:paddingBottom="10dp"
            android:text="@string/export_time_warning"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>