<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/add_consumption_pill_list_item_height"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:id="@+id/pill_list_item"
    tools:layout_height="@dimen/add_consumption_pill_list_item_height">

    <uk.co.pilllogger.views.ColourIndicator
        android:id="@+id/add_consumption_pill_colour"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="8dp"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center_vertical"
        android:color="@color/pill_colour1"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/add_consumption_pill_list_item_height"
        android:orientation="vertical"
         android:layout_toRightOf="@id/add_consumption_pill_colour"
        android:layout_centerVertical="true"
        android:gravity="center_vertical">
        <TextView
            android:textSize="18dp"
            android:id="@+id/pill_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Ibuprofen"/>


        <TextView
            android:id="@+id/pill_list_last_taken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_grey_medium"
            android:text="@string/no_consumptions_message"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/add_consumption_after_click_layout"
        android:layout_height="@dimen/add_consumption_pill_list_item_height"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="right"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/chevron_down_red"
            android:padding="12dp"
            android:id="@+id/add_consumption_minus"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textColor="@color/minus_red"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:focusable="false"/>
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
        <TextView
            android:id="@+id/add_consumption_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_consumption_quantity_default"
            android:textStyle="bold"
            android:gravity="center"/>
         <TextView
            android:id="@+id/add_consumption_suffix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x"
            android:textColor="@color/text_grey_medium"
            android:gravity="center"/>
                </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView android:textSize="14dp"
                      android:id="@+id/pill_list_size"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/text_grey_medium"
                      tools:text="200"/>
            <TextView
                android:id="@+id/pill_list_units"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pill_units"

                android:textColor="@color/text_grey_medium"/>
        </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/chevron_up_green"
            android:padding="12dp"
            android:id="@+id/add_consumption_add"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textColor="@color/add_green"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:focusable="false"/>

    </LinearLayout>

</LinearLayout>