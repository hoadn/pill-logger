<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/add_consumption_pill_list_item_height"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    tools:layout_height="@dimen/add_consumption_pill_list_item_height">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/add_consumption_pill_list_item_height"
        android:orientation="vertical"

        android:layout_centerVertical="true"
        android:gravity="center_vertical">
        <TextView
            android:textSize="18dp"
            android:id="@+id/pill_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Ibuprofen"/>

        <TextView
            android:id="@+id/pill_list_last_taken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_grey_medium"
            android:text="@string/no_consumptions_message"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/add_consumption_after_click_layout"
        android:layout_height="@dimen/add_consumption_pill_list_item_height"
        android:layout_width="0dp"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        style="?ListItemBackgroundSecondary">
        <View
            android:id="@+id/pill_separator"
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="15dp"
            android:background="?android:attr/dividerVertical"/>
        <TextView
            android:id="@+id/add_consumption_amount"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:text="@string/add_consumption_quantity_default"
            android:gravity="center"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/chevron_down_red"
            android:padding="12dp"
            android:id="@+id/add_consumption_minus"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textColor="@color/minus_red"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:focusable="false"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/chevron_up_green"
            android:padding="12dp"
            android:id="@+id/add_consumption_add"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textColor="@color/add_green"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:focusable="false"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/add_consumption_right_info"
        android:layout_width="90dp"
        android:layout_height="@dimen/add_consumption_pill_list_item_height"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/add_consumption_after_click_layout">
        <uk.co.pilllogger.views.ColourIndicator
            android:id="@+id/add_consumption_pill_colour"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="8dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:color="@color/pill_colour1"
            />
        <TextView
            android:id="@+id/pill_list_units"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/add_consumption_pill_colour"
            android:text="@string/pill_units"/>
        <TextView android:textSize="14dp"
            android:id="@+id/pill_list_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/pill_list_units"
            tools:text="200"/>
    </RelativeLayout>

</RelativeLayout>