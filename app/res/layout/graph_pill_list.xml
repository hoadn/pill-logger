<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="5dp"
    tools:layout_height="50dp"
    android:background="@color/drawer_item_grey">

    <LinearLayout
        android:id="@+id/graph_list_pill_colour"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        >

        <CheckBox
            android:id="@+id/graph_list_check_box"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="0dp"
            android:focusable="false"
            android:padding="0dp"
            android:clickable="false"
            android:checked="true"
            android:button="@drawable/graph_pill_list_checkbox"/>

    </LinearLayout>

    <TextView android:textSize="18dp"
        android:id="@+id/pill_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/text_grey_light"
        android:paddingLeft="5dp"
        android:layout_toRightOf="@id/graph_list_pill_colour"
        tools:text="Ibuprofen"/>


    <LinearLayout
        android:id="@+id/add_consumption_right_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:layout_alignParentRight="true">
        <TextView android:textSize="14dp"
            android:id="@+id/pill_list_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/text_grey_light"
            tools:text="200"/>
        <TextView
            android:id="@+id/pill_list_units"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/text_grey_light"
            android:text="@string/pill_units"/>
    </LinearLayout>

</RelativeLayout>