<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:padding="10dp">
    <include layout="@layout/info_dialog_top"/>
    <TextView
        android:id="@+id/consumption_info_dialog_take"
        android:text="@string/consumption_info_dialog_take"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/text_grey"
        android:layout_marginTop="6dp"
        android:paddingTop="8dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"/>
    <TextView
        android:id="@+id/consumption_info_dialog_increase"
        android:text="@string/consumption_info_dialog_increase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/text_grey"
        android:paddingTop="8dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"/>
    <TextView
    android:id="@+id/consumption_info_dialog_decrease"
    android:text="@string/consumption_info_dialog_decrease"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="18sp"
    android:textColor="@color/text_grey_light"
    android:paddingTop="8dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingBottom="8dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="false"/>
    <TextView
        android:id="@+id/info_dialog_delete"
        android:text="@string/info_dialog_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/text_grey"
        android:paddingTop="8dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"/>
</LinearLayout>