<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
               xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/stats_no_information"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/stats_no_information_text"
        android:textSize="20sp"
        android:visibility="gone"
        android:padding="20dp"
        android:gravity="center"/>
<ScrollView
    android:id="@+id/stats_outer"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:paddingTop="8dp"
    android:layout_weight="1">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="10dp">
    <TextView
        android:id="@+id/stats_most_taken_medicine_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/medicine_taken_most_often_title"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/stats_most_taken_1st"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <uk.co.pilllogger.views.ColourIndicator
                    android:id="@+id/stats_most_taken_indicator_1st"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/stats_most_taken_medicine_1st"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:textSize="16sp"
                    tools:text="Paracetamol"/>
                <TextView
                    android:id="@+id/stats_most_taken_count_1st"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textStyle="italic"
                    style="?SecondaryText"
                    android:layout_gravity="center_vertical"
                    tools:text="(17)"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/stats_most_taken_2nd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <uk.co.pilllogger.views.ColourIndicator
                    android:id="@+id/stats_most_taken_indicator_2nd"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/stats_most_taken_medicine_2nd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:textSize="16sp"
                    tools:text="Paracetamol"/>
                <TextView
                    android:id="@+id/stats_most_taken_count_2nd"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textStyle="italic"
                    style="?SecondaryText"
                    android:layout_gravity="center_vertical"
                    tools:text="(17)"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/stats_most_taken_3rd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <uk.co.pilllogger.views.ColourIndicator
                    android:id="@+id/stats_most_taken_indicator_3rd"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"/>
               <TextView
                    android:id="@+id/stats_most_taken_medicine_3rd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:textSize="16sp"
                    tools:text="Paracetamol"/>
                <TextView
                    android:id="@+id/stats_most_taken_count_3rd"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textStyle="italic"
                    style="?SecondaryText"
                    android:layout_gravity="center_vertical"
                    tools:text="(17)"/>
            </LinearLayout>
        </LinearLayout>
        <com.echo.holographlibrary.PieGraph
            android:id="@+id/stats_most_taken_graph"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_divider"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/stats_hour_most_consumptions_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hour_with_most_consumptions_title"
        android:textSize="16sp"/>
    <uk.co.pilllogger.views.HourOfDayView
        android:id="@+id/stats_hour_most_graph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_divider"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/stats_day_most_consumptions_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/day_with_most_consumptions_title"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/stats_day_most_consumptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_grey_medium"
        android:layout_margin="5dp"
        android:textSize="16sp"
        android:visibility="gone"/>

    <uk.co.pilllogger.views.DayOfWeekView
        android:id="@+id/stats_day_most_consumptions_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_divider"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/stats_average_between_consumption_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/average_between_consumptions_title"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/stats_average_between_consumption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_grey_medium"
        android:layout_margin="5dp"
        android:textSize="16sp"
        android:visibility="gone"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_divider"
        android:layout_marginBottom="10dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/stats_longest_between_consumption_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/longest_between_consumption_title"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/stats_longest_between_consumption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_grey_medium"
        android:layout_margin="5dp"
        android:textSize="16sp"
        android:visibility="gone"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_divider"
        android:layout_marginBottom="10dp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/stats_total"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/total_taken_title"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/stats_total_consumption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="983"
            android:textSize="@dimen/numeric_stat_font_size"
            android:layout_gravity="center"
            android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/stats_longest_consecutive"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="@string/longest_streak_title"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/stats_longest_streak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="983"
                android:textSize="@dimen/numeric_stat_font_size"
                android:layout_gravity="center"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/days_text"
                android:textSize="14sp"
                android:layout_gravity="center"/></LinearLayout>
        <LinearLayout
            android:id="@+id/stats_current_consecutive"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="@string/current_streak_title"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/stats_current_streak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="983"
                android:textSize="@dimen/numeric_stat_font_size"
                android:layout_gravity="center"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/days_text"
                android:textSize="14sp"
                android:layout_gravity="center"/></LinearLayout>
    </LinearLayout>
</LinearLayout>
</ScrollView>


</LinearLayout>